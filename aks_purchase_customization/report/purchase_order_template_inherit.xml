<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="purchase.report_purchaseorder_document">
        <t t-call="web.basic_layout">

            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" style="display:none !important;"/>
            <div class="header">
                <table width="100%">
                    <tr>
                        <td>
                            <t t-if="o.company_id.is_a_and_a == True">
                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" height='120' width='120'/>
                            </t>
                            <t t-else="">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo"
                                 height='108' width='220'/>
                            </t>
                        </td>
                        <td class="text-right" style="font-family:Arial;font-size:19px;">
                            <t t-if="o.state == 'draft'">
                                <strong>Purchase Quotation -</strong>
                            </t>
                            <t t-else="">
                                <strong>Purchase Order -</strong>
                            </t>
                            <strong><span t-field="o.name"/></strong>
                        </td>
                    </tr>
                </table>
            </div>
            <t t-if="o.dest_address_id" style="display:none !important;">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
                    </div>

                </t>
            </t>

            <div class="page" style="font-family:Arial;margin-right:40px;margin-left:40px !important;">
                <div class="oe_structure"/>
                <strong>
                    <table width="100%">
                        <tr>
                            <td>
                                <p t-if="o.partner_id.parent_id" class="m-0" t-field="o.partner_id.parent_id.name"/>
                            </td>
                            <td t-if="o.date" class="text-right">
                                <span>
                                    <strong>Date:</strong>
                                </span>
                                <span class="m-0" t-field="o.date" t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <p t-if="o.partner_id" class="m-0" t-field="o.partner_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div t-field="o.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                            </td>
                        </tr>
                    </table>
                </strong>

                <br></br>
                <table width="100%">
                    <tr>
                        <td>
                            <span>
                                <strong>Job:</strong>
                            </span>
                            <span class="m-0" t-field="o.job_number"/>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span>
                                <strong>Account Manager:</strong>
                            </span>
                            <span class="m-0" t-field="o.office_finance_manager.name"/>
                        </td>
                    </tr>
                </table>

                <br></br>
                <table width="100%">
                    <tr>
                        <td style="font-weight:bold;font-size:19px">
                            <span>Subject:</span>
                            <span t-field="o.subject"/>
                        </td>
                    </tr>
                </table>
                <div id="informations" class="row mt32 mb32" style="display:none !important;">
                    <div t-if="o.user_id" class="col-3 bm-2">
                        <strong>Purchase Representative:</strong>
                        <p t-field="o.user_id" class="m-0"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-3 bm-2">
                        <strong>Your Order Reference:</strong>
                        <p t-field="o.partner_ref" class="m-0"/>
                    </div>
                    <div t-if="o.date_order" class="col-3 bm-2">
                        <strong>Order Date:</strong>
                        <p t-field="o.date_order" class="m-0"/>
                    </div>
                </div>
                <div class="container">
                    <div class="row"
                         style="border-top-right-radius: 5px;border-top-left-radius: 5px;background : #bfbfbf;color:#000;vertical-align: middle;height:30px;">
                        <div class="text-left col-auto col-5">
                            <b>Item</b>
                        </div>
                        <div class="text-right col-auto col-3">
                            <b>Qty</b>
                        </div>
                        <div class="text-right col-auto col-3">
                            <b>Unit</b>
                        </div>
                        <div class="text-right col-auto col-3">
                            <b>Price/1</b>
                        </div>
                        <t t-if="o.amount_tax > 0">
                            <div class="col-auto col-3">
                                <b>VAT</b>
                            </div>
                        </t>
                        <div class="text-right col-auto col-3">
                            <b>Total</b>
                        </div>
                    </div>
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-foreach="o.order_line" t-as="line">
                        <div class="row"
                             style="font-size:13.5px;">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>
                            <t t-if="not line.display_type">
                                <div class="col-auto col-5 text-justify">
                                    <p>
                                        <span style="display: block;" t-field="line.name"/>
                                    </p>
                                </div>
                                <div class="text-right col-auto col-3">
                                    <!--<span t-esc="line.product_uom_qty"/>-->
                                    <span t-esc="'%.0f'% line.product_uom_qty"/>
                                </div>
                                <div class="text-right col-auto col-3">
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </div>
                                <div class="text-right col-auto col-3">
                                    <span t-field="line.price_unit"/>
                                </div>
                                <t t-if="o.amount_tax > 0">
                                    <div class="col-auto col-3">
                                        <t t-if="line.get_taxes()">
                                            <span t-esc="line.get_taxes()"/>
                                        </t>
                                    </div>
                                </t>
                                <div class="text-right col-auto col-3" style="padding-right:0px;">
                                    <span t-esc="'%.2f'% line.price_subtotal"
                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-esc="'%.2f'% line.price_total"
                                          groups="account.group_show_line_subtotals_tax_included"/>
                                </div>
                            </t>
                        </div>

                        <t t-if="line.display_type == 'line_note'">
                            <div class="row text-left">
                                <p style="width: 100%;font-weight:bold;" t-field="line.name"/>
                            </div>
                        </t>
                        <t t-if="line.display_type == 'line_section'">
                            <strong class="row">
                                <p style="width: 100%;font-weight:bold;" t-field="line.name"/>
                            </strong>
                            <t t-set="current_section" t-value="line"/>
                            <t t-set="current_subtotal" t-value="0"/>
                        </t>
                        <!--<t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <div width="100%" style="border:1px solid black;" class="row">
                                <span style="font-weight:bold;" class="mr16">Total
                                    <t style="font-weight:bold;" t-esc="current_section.name"/>
                                </span>
                                <span class="text-right" t-esc="current_subtotal" digits="[42, 2]"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </div>
                        </t>-->
                    </t>
                </div>
                <br/>
                <!-- <div class="col-12 bg-200">
                    <div id="total" class="row justify-content-end">
                        <table class="table table-sm" width="100%">
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-call="account.document_tax_totals"/>
                        </table>
                    </div>
                </div> -->
                <div class="container">
                <t t-if="o.amount_tax > 0">
                    <div id="total" class="row justify-content-end bg-200">
                        <div class="col-6">
                            <span style="font-weight:bold;" class="mr16">Total excl. VAT </span>
                        </div>
                        <div style="padding-right:0px;" class="col-6 text-right">
                        <strong><span t-field="o.amount_untaxed" digits="[42, 2]"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></strong> 
                        </div>
                    </div>
                    <div id="total_vat" class="row justify-content-end bg-200">
                        <div class="col-6">
                            <span style="font-weight:bold;" class="mr16">VAT </span>
                        </div>
                        <div style="padding-right:0px;" class="col-6 text-right">
                        <strong><span t-field="o.amount_tax" digits="[42, 2]"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></strong> 
                        </div>
                    </div>
                </t>
                
                <div id="total_including_vat" class="row justify-content-end bg-200">
                    <t t-if="o.amount_tax > 0">
                        <div class="col-6">
                            <span style="font-weight:bold;" class="mr16">Total incl. VAT </span>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="col-6">
                            <span style="font-weight:bold;" class="mr16">Total </span>
                        </div>
                    </t>
                    <div style="padding-right:0px;" class="col-6 text-right">
                    <strong><span t-field="o.amount_total" digits="[42, 2]"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></strong> 
                    </div>
                </div>
                <br/>
                </div>
                <div class="col-8 text-left" style="margin-top:20px;margin-right:0px;margin-left:0px !important;">
                    <table width="100%">
                        <colgroup>
                        <col width='34%'/>
                        <col width='2%'/>
                        <col width='64%'/>
                    </colgroup>
                        <tr>
                            <td>
                              <strong><span>Delivery Date</span></strong>
                            </td>
                            <td/>
                            <td>:
                                <t t-if="o.delivery_date">
                                 <span t-esc="o.delivery_date.strftime('%d/%m/%Y')"/>
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong> <span>Delivery Place</span></strong>
                            </td>
                            <td/>
                            <td>
                                : <span t-field="o.delivery_place"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong><span>Payment Conditions</span></strong>
                            </td>
                            <td/>
                            <td>
                                : <span t-field="o.payment_term_id"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <!-- <br/> -->

                <div class="row text-left justify-content-end" style="font-size:13px;margin-top:20px;margin-right:5px;margin-left:5px !important;">
                    <p t-field="o.dynamic_content"/>
                </div>
                <br/>
                <span class="m-0" t-field="o.office_finance_manager.name"/><br/>
                <span>Office &amp; Finance Manager</span>

                <div class="oe_structure"/>
            </div>
        </t>
    </template>
</odoo>