<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_print_document">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="doc">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" style="display:none !important;"/>
                <div class="header">
                    <table width="100%">
                        <tr>
                            <td>
                                <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo" height='108' width='320'/>
                            </td>
                            <td class="text-right">
                                <strong>INVOICE No.
                                    <span t-field="doc.name"/>
                                </strong>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="page" style="margin-top:20px;margin-right:10px;margin-left:10px !important;">
                    <div class="oe_structure"/>
                    <div class='container'>
                        <div class='row' style='border-bottom:2px solid black;'>
                            <div class='col-12 text-left'>
                                <b>
                                    Client:
                                </b>
                            </div>
                        </div>

                        <div class='row' style='border-bottom:2px solid black;'>
                            <div class='col-6 text-left'>
                                <t t-if="doc.partner_id.name">
                                    <span t-esc="doc.partner_id.name"></span>
                                    <br/>
                                </t>
                                <t t-if="doc.partner_id.street">
                                    <span t-esc="doc.partner_id.street"></span>
                                    <br/>
                                </t>
                                <t t-if="doc.partner_id.street2">
                                    <span t-esc="doc.partner_id.street2"></span>
                                    <br/>
                                </t>
                                <t t-if="doc.partner_id.city">
                                    <span t-esc="doc.partner_id.city"></span>
                                    <br/>
                                </t>
                                <t t-if="doc.partner_id.state_id">
                                    <span t-esc="doc.partner_id.state_id.name"></span>
                                    <br/>
                                </t>
                                <t t-if="doc.partner_id.country_id">
                                    <span t-esc="doc.partner_id.country_id.name"></span>
                                    <br/>
                                </t>
                            </div>
                        </div>
                    </div>
                    <table width="100%">
                        <tr>
                            <td width='25%'>
                            Purchase Reference No.
                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.payment_reference"/>
                            </td>
                            <td width='25%'>
                                Issue Date
                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.invoice_date.strftime('%d/%m/%Y')"/>
                            </td>
                        </tr>
                        <tr>
                            <td width='25%'>
                                Job No.

                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.job_num.name"/>
                            </td>
                            <td width='25%' style='border-bottom:2px solid black;'>
                                Due Date
                            </td>
                            <td width='25%' style='border-bottom:2px solid black;'>
                                :                                <t t-esc="doc.invoice_date_due.strftime('%d/%m/%Y')"/>
                            </td>
                        </tr>
                        <tr>
                            <td width='25%'>
                                Client
                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.partner_id.name"/>
                            </td>
                            <td width='25%'>
                                Payment Conditions
                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.invoice_payment_term_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td width='25%'>
                                Brand
                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.brand"/>
                            </td>
                        </tr>
                        <tr style='border-bottom:2px solid black;'>
                            <td width='25%'>
                                Assembled By
                            </td>
                            <td width='25%'>
                                :                                <t t-esc="doc.assembled_by.name"/>
                            </td>
                            <td width='25%'/>
                            <td width='25%'/>
                        </tr>
                        <tr style='border-bottom:2px solid black;'>
                            <td width='25%'>
                                Comments:
                            </td>
                            <td width='25%'>
                                <t t-esc="doc.narration"/>
                            </td>
                            <td width='25%'/>
                            <td width='25%'/>
                        </tr>
                    </table>
                    <br></br>
                    <div>
                        <b>
                            <u>We invoice you for:</u>
                        </b>
                        <t t-esc="doc.invoice_you_for"/>
                    </div>
                    <br/>
                    <table class='table table-bordered'>
                        <thead>
                            <tr style='background-color:#bdb7b6;'>
                                <th>Items</th>
                                <th>Qty</th>
                                <th>Unit</th>
                                <th>Price</th>
                                <t t-if="int(doc.amount_tax) > 0">
                                    <th>Total excl. VAT</th>
                                    <th>VAT</th>
                                    <th>Total incl. VAT</th>
                                </t>
                                <t t-else="">
                                    <th>Total</th>
                                </t>
                            </tr>
                        </thead>
                        <t t-foreach="doc.invoice_line_ids" t-as="line">
                            <tr>
                                <td>
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td>
                                </td>
                                <span t-field="line.quantity"/>
                                <td>
                                    <span t-field="line.product_uom_id.name"/>
                                </td>
                                <td>
                                    <span t-field="line.price_unit"/>
                                </td>
                                <t t-if="line.tax_ids">
                                    <td>
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.tax_percent(line.tax_ids)"/>
                                    </td>
                                    <td>
                                        <span t-esc="doc.incl_vat_amount(line.price_subtotal,line.tax_ids)"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td>
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                        <t t-if="int(doc.amount_tax) > 0">
                            <tr>

                                <td colspan='5'>
                                    <b>Total Inc. VAT</b>
                                </td>
                                <td class='text-center' colspan='2'>
                                    <b><t t-esc="doc.amount_total"/></b>
                                    <t t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr style='background-color:#bdb7b6;'>
                                <td colspan='5'>
                                    <b>To be paid</b>
                                </td>
                                <td class='text-center' colspan='2'>
                                    <b><t t-esc="doc.amount_residual"/></b>
                                    <t t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>

                        </t>
                        <t t-else="">
                            <tr style='background-color:#bdb7b6;'>
                                <td colspan='4'>
                                    <b>To be paid</b>
                                </td>
                                <td class='text-center' colspan='1'>
                                    <b><t t-esc="doc.amount_residual"/></b>
                                    <t t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                        </t>
                    </table>
                    <br></br>
                    <t t-if="doc.company_id">
                        <div>
                            <strong>
                                <u>Bank Details:</u>
                            </strong>
                        </div>
                        <div class='container'>
                            <div class='row'>
                                <div class='col-4'>Bank Account:</div>
                                <div class='col-8'>
                                    <span t-esc="doc.company_id.bankaccount_id.acc_number"></span>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-4'>Bank:</div>
                                <div class='col-8'>
                                    <span t-esc="doc.company_id.bank_id.name"></span>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-4'>IBAN:</div>
                                <div class='col-8'>
                                    <span t-esc="doc.company_id.iban"></span>
                                </div>
                            </div>
                            <div class='row'>
                                <div class='col-4'>SWIFT:</div>
                                <div class='col-8'>
                                    <span t-esc="doc.company_id.swift"></span>
                                </div>
                            </div>
                        </div>
                    </t>
                    <br></br>
                    <div>Thank you for payment in due date.</div>
                    <br></br>

                </div>


            </t>
        </t>
    </template>
</odoo>